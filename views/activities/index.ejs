<% layout('/layout/boilerplate') -%>
<div id="cluster-map"></div>

<% for (let activity of activities) { %>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4 text-center">
            <% if (activity.images.length > 0)  { %>
            <img class="img-fluid rounded  mx-auto"
                src="<%= activity.images[Math.floor(Math.random() * activity.images.length)].url %>" alt="activity img">
            <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= activity.title %></h5>
                <p class="card-text"><%= activity.description %></p>
                <p class="card-text text-muted">
                    <small><%= activity.location %></small>
                </p>
                <a class="btn btn-primary" href="/activities/<%= activity._id %>">View <%= activity.title %></a>
            </div>
        </div>
    </div>
</div>
<% } %>

<script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
    const activities = { "features": <%- JSON.stringify(activities) %> };
</script>
<script src="/javascripts/clusterMap.js"></script>