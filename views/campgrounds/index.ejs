<% layout('/layout/boilerplate') -%>
<div id="cluster-map"></div>

<% for (let camp of campgrounds) { %>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4 text-center">
            <% if (camp.images.length > 0)  { %>
            <img class="img-fluid rounded  mx-auto"
                src="<%= camp.images[Math.floor(Math.random() * camp.images.length)].url %>" alt="camp img">
            <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= camp.title %></h5>
                <p class="card-text"><%= camp.description %></p>
                <p class="card-text text-muted">
                    <small><%= camp.location %></small>
                </p>
                <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>">View <%= camp.title %></a>
            </div>
        </div>
    </div>
</div>
<% } %>

<script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
    const campgrounds = { "features": <%- JSON.stringify(campgrounds) %> };
</script>
<script src="/javascripts/clusterMap.js"></script>